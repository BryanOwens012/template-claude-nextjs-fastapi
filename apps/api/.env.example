# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Configuration
ENV=development
DEBUG=true
API_SECRET_KEY=your_secret_key_here_change_in_production

# Supabase Configuration (Required)
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-public-key-here
# Service role key (has admin privileges - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Redis (required for caching/sessions)
# Local development:
REDIS_URL=redis://localhost:6379
# Railway will automatically set this when you add Redis plugin
# Production: redis://default:password@redis.railway.internal:6379

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# External API Keys
# Add your API keys here

# AI APIs
# ANTHROPIC_API_KEY=sk-ant-xxxxx
# OPENAI_API_KEY=sk-xxxxx

# Cloud Storage
# AWS_ACCESS_KEY_ID=xxxxx
# AWS_SECRET_ACCESS_KEY=xxxxx
# AWS_S3_BUCKET=your-bucket-name

# Email Service
# SENDGRID_API_KEY=xxxxx
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Payment Processing
# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Authentication
# JWT_SECRET=your_jwt_secret_here
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring & Logging
# SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
# LOG_LEVEL=INFO

# Rate Limiting
# RATE_LIMIT_PER_MINUTE=60
